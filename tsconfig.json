{
    "compilerOptions": {
        "types": [
            "node",
            "@testing-library/jest-dom",
            "vitest/globals"
        ],
        "target": "ESNext",
        "useDefineForClassFields": true,
        "lib": [
            "DOM",
            "DOM.Iterable",
            "ESNext"
        ],
        "allowJs": false,
        "skipLibCheck": true,
        "esModuleInterop": false,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "module": "node16",
        "moduleResolution": "node16",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "jsx": "react-jsx",
        "paths": {
            "baseurl": [
                "./"
            ],
            "@/*": [
                "./src/*"
            ],
            "@types": [
                "./src/types"
            ],
            "@test-utils": [
                "./src/utils/test"
            ]
        }
    },
    "include": [
        "src",
        "src/utils/test"
    ]
}